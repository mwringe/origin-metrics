{
  "id": "hawkular-heapster-template",
  "kind": "Template",
  "apiVersion": "v1",
  "name": "Hawkular Heapster Template",
  "description": "Configures a Heapster template to be used with Hawkular Metrics.",
  "metadata" : {
    "name": "hawkular-heapster-template",
    "labels": {
      "metrics-infra": "heapster"
    }
  },
  "parameters" : [
    { "description": "Internal URL for the master, for authentication retrieval",
      "name": "OAP_MASTER_URL",
      "value": "https://kubernetes.default.svc.cluster.local:443"
    },
    { "description": "Internal URL for the master, for authentication retrieval",
      "name": "HEAPSTER_IMAGE",
      "value": "gcr.io/google_containers/heapster:v0.18.1"
    }
  ],
  "objects": [
    {
      "apiVersion": "v1",
      "kind": "Service",
      "metadata": {
        "name": "heapster",
        "labels": {
          "metrics-infra": "heapster",
          "name": "heapster"
        }
      },
      "spec": {
        "selector": {
          "name": "heapster"
        },
        "ports": [
          { "name": "http-endpoint", "port": 80, "targetPort": "http-endpoint" }
        ]
      }
    },
    {
      "apiVersion": "v1",
      "kind": "ReplicationController",
      "metadata": {
        "name": "heapster",
        "labels" : {
          "metrics-infra": "heapster",
          "name": "heapster"
        }
      },
      "spec": {
        "selector" : {
          "name": "heapster"
        },
        "replicas": 1,
        "template": {
          "version": "v1",
          "metadata": {
            "labels" : {
              "metrics-infra": "heapster",
              "name": "heapster"
            }
          },
          "spec": {
            "containers": [{
              "image": "${HEAPSTER_IMAGE}",
              "name" : "heapster",
              "ports": [
                { "name": "http-endpoint", "containerPort": 8082}
              ],
              "command" : ["./heapster",
                "--source=kubernetes:${OAP_MASTER_URL}?useServiceAccount=true&kubeletHttps=false&kubeletPort=10266&auth=",
                "--sink=hawkular:https://hawkular-metrics:443?tenant:_system&labelToTenant=pod_namespace&useServiceAccount=true&caCert=/secrets/hawkular-metrics-ca.certificate",
                "--logtostderr=true",
                "--vmodule=*=4"],
              "volumeMounts": [
                { "name": "hawkular-metrics-certificate", "mountPath": "/secrets"}
              ]
            }],
            "volumes": [
              { "name": "hawkular-metrics-certificate", "secret": { "secretName": "hawkular-metrics-certificate"} }
            ],
            "serviceAccount" : "hawkular"
          }
        }
      }
    }
  ]
}
